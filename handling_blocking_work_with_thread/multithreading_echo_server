from _socket import SO_REUSEADDR
from socket import socket, AF_INET, SOCK_STREAM
from ssl import SOL_SOCKET
from threading import Thread


def echo(client: socket):
    while True:
        data = client.recv(2048)
        print(f'received {data}, sending!')
        client.sendall(data)

with socket(AF_INET, SOCK_STREAM) as sever:
    sever.setsockopt(SOL_SOCKET, SO_REUSEADDR, 1)
    sever.bind("127.0.0.1", 8000)
    sever.listen()
    while True:
        conn, _=sever.accept()
        thread = Thread(target=echo, args=(conn,))
        thread.start()